extends layout

block content
  h1=title
  
  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' 
        name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
      label(for='surname') Surname:
      input#surname.form-control(type='text' placeholder='Surname'
        name='surname' required='true' value=(undefined===user ? '' : user.surname))
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='Email'
        name='email' required='true' value=(undefined===user ? '' : user.email) )
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='Password' 
        name='password' required='true')
    div.form-group
      label(for='confirm_password') Confirm Password:
      input#password.form-control(type='password' placeholder='Confirm Password' 
        name='confirm_password' required='true')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg